<div class="row text-center mt-4">
  <div class="col-md-12 boundary">
    <h1 class="main-text">TMDB DATABASE SERVICE</h1>
    <p class="sub-text">Look for your movies, tvs and people</p>
  </div>
</div>

<br/>
<br/>

<div class="row text-center mt-4">
  <div class="col-md-12">
    <h2>Movies</h2>

    <div class="">
      <% @movies.each do |m|%>
        <% if m.poster_path %>
          <a href="/movies/<%= m.movie_id %>">
            <%= image_tag('http://image.tmdb.org/t/p/w185/' + m.poster_path, alt: m.title, class: 'poster-img', style:'margin:20px')%>
          </a>
        <% else %>
          <a href="/movies/<%= m.movie_id %>">
            <%= image_tag('', alt: m.title, class: 'no-img-preview-sm', style:'margin:20px')%>
          </a>
        <% end %>
      <% end %>

      <p><%= link_to "more", "/movies", class: "btn btn-sm btn-danger mb-2", style:'padding-left: 30px; padding-right: 30px;' %></p>

    </div>
  </div>
</div>

<br/>
<br/>

<div class="row text-center mt-4">
  <div class="col-md-12">
    <h2>Tvs</h2>

    <div class="">
      <% @tvs.each do |t|%>
        <% if t.poster_path %>
          <a href="/tvs/<%= t.tv_id %>">
            <%= image_tag('http://image.tmdb.org/t/p/w185/' + t.poster_path, alt: t.name, class: 'poster-img', style:'margin:20px')%>
          </a>
        <% else %>
          <a href="/tvs/<%= t.tv_id %>">
            <%= image_tag('', alt: t.name, class: 'no-img-preview-sm', style:'margin:20px')%>
          </a>
        <% end %>
      <% end %>
    
      <p><%= link_to "more", "/tvs", class: "btn btn-sm btn-danger mb-2", style:'padding-left: 30px; padding-right: 30px;' %></p>

    </div>
  </div>
</div>


<br/>
<br/>

<div class="row text-center mt-4">
  <div class="col-md-12">
    <h2>People</h2>

    <div class="">
      <% @people.each do |p|%>
        <% if p.profile_path %>
          <a href="/people/<%= p.person_id %>">
            <%= image_tag('http://image.tmdb.org/t/p/w185/' + p.profile_path, alt: p.name, class: 'poster-img', style:'margin:20px')%>
          </a>
        <% else %>
          <a href="/people/<%= p.person_id %>">
            <%= image_tag('', alt: p.name, class: 'no-img-preview-sm', style:'margin:20px')%>
          </a>
        <% end %>
      <% end %>
      
      <p><%= link_to "more", "/people", class: "btn btn-sm btn-danger mb-2", style:'padding-left: 30px; padding-right: 30px;' %></p>

    </div>
  </div>
</div>
