<h1>전체 MovieCredit 조회</h1>

<hr />
<span style="margin-left:20px"> Movie_id </span>
<span style="margin-left:20px"> Person_id </span>
<span style="margin-left:20px"> Role </span>
<hr />
<% @movieCredits.each do |mc|%>

  <span style="float:left; margin-left:20px ">
    <a href="/movies/<%= mc.movie_id %>">
      <%= mc.movie_id %><br />
    </a>
  </span>

  <span style="float:left; margin-left:20px">
    <a href="/people/<%= mc.person_id %>">
      <%= mc.person_id %><br />
    </a>
  </span>

  <span style="float:left; margin-left:20px ">
      <%= mc.role %><br />
  </span>

  <br />
  <hr />
<% end %>
